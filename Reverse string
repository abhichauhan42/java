public class reversestring {
    public static void reverse(String str, int indx) {
        if (indx == 0) {
            System.out.println(str.charAt(indx));
            return;
        }
        System.out.print(str.charAt(indx));
        reverse(str, indx - 1);
    }

    public static void main(String[] args) {
        String a = "abhi";
        reverse(a, a.length() - 1);
    }
}
