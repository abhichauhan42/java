import java.util.*;

public class evenodd {
    public static void main(String[] args) {
        Scanner se = new Scanner(System.in);
        System.out.println("Enter the number:");
        int num = se.nextInt();
        if (num % 2 == 0) {
            System.out.println("Number is even");
        } else {
            System.out.println("Number is odd");
        }
        se.close();
    }
}
